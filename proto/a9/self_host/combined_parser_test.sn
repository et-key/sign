		(res ?
			(ast ?
				print_str `Parsed AST Root (Block):`
				print_char 10
				_print_ast ast 0
			) (head res)
		) (parse_program tokens)
		
	) (`1 + 2 * 3`)

#_print_ast : node indent ?
	_print_indent indent
	
	type : head node
	val : head (tail node)
	
	type = ast_num : (
		print_str `NUM: `
		print_num val
		print_char 10
		0
	)
	
	type = ast_infix : (
		print_str `INFIX: `
		print_str val
		print_char 10
		
		left : head (tail (tail node))
		right : head (tail (tail (tail node)))
		
		_print_ast left (indent + 2)
		_print_ast right (indent + 2)
		0
	)
	
	type = ast_block : (
		print_str `BLOCK`
		print_char 10
		` TODO: Print children list `
		0
	)
	
	print_str `UNKNOWN NODE`
	print_char 10

#_print_indent : n ?
	n <= 0 : 0
	print_char 32
