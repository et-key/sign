grammer     = { SOI ~ expression* ~ EOI }

expression  = {
  export
  | assign
  | lambda
  | or_xor
  | and
  | not
  | compare
  | add_sub
  | mul_div
  | power
  | factrial
  | coproduct
  | get
  | import
  | literal
  | ident
  | block
}

NewBlock = _{
  PEEK_ALL ~ PUSH(indent+) ~ expression ~ (PEEK_ALL ~ expression)* ~ DROP
}

block = _{
  NEWLINE ~ NewBlock
  | "[" ~ expression+ ~ "]"
  | "{" ~ expression+ ~ "}"
  | "(" ~ expression+ ~ ")"
  | "[" ~ (indent_line ~ expression+)+ ~ "]"
  | "{" ~ (indent_line ~ expression+)+ ~ "}"
  | "(" ~ (indent_line ~ expression+)+ ~ ")"
}

indent_line = {
  NEWLINE ~ indent
}

indent      = { "\t" | "  " }

prefix      = {
  f_export
  | f_not
  | f_get
  | f_spread
}

infix_L     = {
  f_product
  | f_coproduct
  | f_or
  | f_xor
  | f_and
  | f_add
  | f_sub
  | f_mul
  | f_div
  | f_mod
  | f_spread
  | f_get
}

compare_op  = {
  f_less
  | f_less_eq
  | f_eq
  | f_neq
  | f_more_eq
  | f_more
}

infix_R     = {
  f_assign
  | f_power
}

postfix     = { f_factrial }

f_export    = { "#" }
f_assign    = { ":" }
f_lambda    = { "?" }
f_product   = { "," }
f_coproduct = { " " }
f_or        = { "|" }
f_xor       = { ";" }
f_and       = { "&" }
f_not       = { "!" } //prefix
f_less      = { "<" }
f_less_eq   = { "<=" }
f_eq        = { "=" | "==" }
f_neq       = { "!=" }
f_more_eq   = { ">=" }
f_more      = { ">" }
f_add       = { "+" }
f_sub       = { "-" }
f_mul       = { "*" }
f_div       = { "/" }
f_mod       = { "%" }
f_power     = { "^" }
f_factrial  = { "!" } //postfix
f_spread    = { "~" }
f_get       = { "@" }
rest_param  = { "~" }
p_holder    = { "@" }
otherwise   = { "_" }


export      = { f_export ~ expression+ }

assign      = {
    as_logic
  | as_number
  | as_char
  | as_string
  | as_lambda
  | as_none
}

as_logic    = {
  id_logic ~ f_assign ~ (logic | not)
}

as_number   = {
    as_natural
  | as_integer
  | as_real
  | as_hex
}

as_natural  = {
  id_natural ~ f_assign ~ (natural | factrial)
}

as_integer  = {
  id_integer ~ f_assign ~ (integer | factrial)
}

as_real     = {
  id_real ~ f_assign ~ (real | factrial)
}

as_hex      = {
  id_hex ~ f_assign ~ (hex | factrial)
}

as_char     = {
  id_char ~ f_assign ~ charactor
}

as_string   = {
  id_string ~ f_assign ~ string
}

as_lambda   = {
  id_lambda ~ f_assign ~ lambda
}

as_none     = {
  id_none ~ f_assign ~ none
}

id_logic    = { ident }
id_natural  = { ident }
id_integer  = { ident }
id_real     = { ident }
id_hex      = { ident }
id_char     = { ident }
id_string   = { ident }
id_lambda   = { ident }
id_none     = { ident }

lambda      = {
  ident ~ (ident | f_spread ~ ident)* ~ f_lambda ~ expression+
  | arg_list
  | point_free
  | place_holdered
  | match_case
}

arg_list    = {
  args? ~ (infix_L | compare_op | infix_R | id_lambda ) ~ (args | expression)*
  | (args | expression)* ~ (compare_op | infix_L | infix_R) ~ args
  | prefix ~ args
  | args ~ postfix
  | f_lambda ~ args
}

args        = @{ p_holder ~ (ASCII_DIGIT)* ~ rest_param? }

point_free  = {
  (id_lambda | infix_L | compare_op | infix_R) ~ literal
  | (logic | number | charactor | string) ~ (infix_L | compare_op | infix_R)
  | (infix_L | compare_op | infix_R) ~ ((NEWLINE ~ "\t" ~ expression+)+ | expression+) ~ NEWLINE
  | prefix
}

place_holdered = {
  (id_lambda | prefix | infix_L | infix_R) ~ (p_holder | expression)+
  | p_holder ~ postfix
  | f_lambda ~ p_holder
}

match_case = {
  (ident | ident ~ f_spread ~ ident)* ~ f_lambda ~ (indent_line ~ ((logic | number | charactor | string | point_free | otherwise) ~ f_assign ~ expression+))+
}

or_xor      = {
  and ~ f_or ~ or_xor
  | and ~ f_xor ~ or_xor
  | and
}

and         = {
  not ~ f_and ~ and
  | not
}

not        = {
  f_not ~ (compare | logic | ident)
  | compare
  | logic
  | ident
}

compare     = {
    add_sub ~ f_less ~ add_sub
  | add_sub ~ f_less_eq ~ add_sub
  | add_sub ~ f_eq ~ add_sub
  | add_sub ~ f_neq ~ add_sub
  | add_sub ~ f_more_eq ~ add_sub
  | add_sub ~ f_more ~ add_sub
  | add_sub
}

add_sub     = {
  mul_div ~ f_add ~ add_sub
  | mul_div ~ f_sub ~ add_sub
  | mul_div
}

mul_div     = {
  power ~ f_mul ~ mul_div
  | power ~ f_div ~ mul_div
  | power ~ f_mod ~ mul_div
  | power
}

power       = {
  factrial ~ f_power ~ power
  | factrial
}

factrial    = {
  (number | ident) ~ f_factrial
  | number
  | ident
}

coproduct   = {
  compose_L
  | concat
}

compose_L   = {
  (lambda | id_lambda) ~ (f_coproduct ~ compose_L)+ 
}

concat      = {
  charactor+ ~ (f_coproduct ~ ident | concat+)*
  | string+ ~ concat*
}

get         = {
  f_get ~ ident ~ block*
  | (ident ~ f_get)+ ~ ident
}

import      = {
  f_get ~ (ident | string)
}

literal     = @{
  logic
  | number
  | charactor
  | string
  | ident
  | lambda
  | none
}

logic       = {
  true
  | false
}

true        = @{ "$" }
false       = @{ "\\" }

number = {
  natural
  | integer
  | real
  | hex
}

natural     = @{ ASCII_DIGIT+ }

integer     = @{ "-"? ~ natural }

real        = @{ integer ~ "." ~ natural }

hex         = @{ "0x"~ ASCII_HEX_DIGIT+ }

charactor   = @{ "'" ~ ANY }

string      = { "`" ~ (!NEWLINE ~ ANY)* ~ "`" }

ident       = {
  (ASCII_ALPHANUMERIC | "_")+ ~ (ASCII_ALPHA | "_")
  | f_spread ~ string
}

none        = { otherwise }